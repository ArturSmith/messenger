<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".presentation.RegistrationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/registration"
            android:textSize="35sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
             />

        <EditText
            android:id="@+id/editTextNameRA"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border"
            android:hint="@string/name"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:inputType="text"
            android:importantForAutofill="no"
            android:autofillHints="" />

        <EditText
            android:id="@+id/editTextLastNameRA"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border"
            android:hint="@string/last_name"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:inputType="text"
            android:autofillHints="" />

        <EditText
            android:id="@+id/editTextEmailRA"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border"
            android:hint="@string/email_hint_text"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/editTextPasswordRA"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border"
            android:hint="@string/password_hint_text"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/editTextConfirmPasswordRA"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border"
            android:hint="@string/confirm_password_hint_text"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:padding="10dp"
            android:autofillHints="" />

        <TextView
            android:id="@+id/errorTextRA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/holo_red_light"
            android:textSize="15sp"
            android:visibility="visible"
             />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRegisterRA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
    </LinearLayout>

</ScrollView>